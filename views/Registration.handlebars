<section class="registration-page">
    <div class="registration" id="reg-post">
        <div class="R-form">

            <form method="post" id="register" action="/Validation">
                <h3>Create New Account </h3>
                <hr>
                   {{#each messages}}
                   <div class="errors">{{this}}</div>
                   {{/each}}
                <label id="icon" for="fname"><i class="R-label"> First Name : </i></label><br>
                <input type="text" name="fname" id="name" required /> <br>


                <label id="icon" for="lname"><i class="R-label"> Last Name :</i></label> <br>
                <input type="text" name="lname" id="name" required /> <br>

                <label id="icon" for="email"><i class="R-label"> Email :</i></label><br>
                <input type="text" name="email" id="name" required /> <br>

                <label id="icon" for="phone"><i class="R-label"> Phone Number :</i></label><br>
                <input type="text" name="phone" id="name" required /> <br>

                <label id="icon" for="pswd"><i class="R-label"></i> Create Password : </label><br>
                <input type="password" name="pswd" id="name" required /> <br>

            
                <br>
                <input type="checkbox"> I Agree to the Terms of use. <br><br>
                <input type="Submit" class="button" value="Register Now">
                 <button type="button" onclick="document.getElementById('reg-post').style.display='none'" class="cancel-btn">Cancel</button>

            </form>
        </div>
    </div>
</section>