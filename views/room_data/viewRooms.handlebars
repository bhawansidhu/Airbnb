<div style="text-align: center;margin:2em;font-size:1.5em; font-weight:bold;" >
     <a href="/room-listing/create_rooms" style="text-decoration:underline;color:rgb(133, 13, 79)"> Click Here to Create More rooms</a>
</div>

<section class="roomList">

    <div class="photos">
        {{#each rooms}}
        <div class="place">
            <div class="place-item">
                <img src="/room_images/{{roomImage}}" class="place-img" width="400px" height="210px">
            </div>
            <div class="main-heading-view">
                <h4><a href="#Village Residency 1" class="image-title">{{this.title}}</a></h4>

                 <h4 class="bold-p"> ${{this.price}} Avg/Night </h4>
                 <h4 class="location">Location: {{this.location}} </h4>
                <h5 class="description">{{this.description}}</h5>
                <a href="/room-listing/edit_rooms/{{this.id}}" class="del-button" id="edit_btn">Edit</a>
                <a href="/room-listing/delete/{{this.id}}?method=DELETE" class="del-button">Delete</a>
            </div>
        </div>
        {{/each}}
    </div>
    
</section>







